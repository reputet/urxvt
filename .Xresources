! to match gnome-terminal "Linux console" scheme
! foreground/background
URxvt*background: #404040
URxvt*foreground: #ffffff
! black
URxvt.color0  : #000000
URxvt.color8  : #555555
! red
URxvt.color1  : #AA0000
URxvt.color9  : #FF5555
! green
URxvt.color2  : #00AA00
URxvt.color10 : #55FF55
! yellow
URxvt.color3  : #AA5500
URxvt.color11 : #FFFF55
! blue
URxvt.color4  : #0000AA
URxvt.color12 : #5555FF
! magenta
URxvt.color5  : #AA00AA
URxvt.color13 : #FF55FF
! cyan
URxvt.color6  : #00AAAA
URxvt.color14 : #55FFFF
! white
URxvt.color7  : #AAAAAA
URxvt.color15 : #FFFFFF

! URxvt*font: xft:Monospace:pixelsize=16
! URxvt*font: xft:DejaVuSansMono:pixelsize=16
URxvt*font: xft:DejaVuSansMono:pixelsize=16
URxvt*boldFont: xft:Monospace:bold:pixelsize=16
URxvt*italicFont: xft:Monospace:italic:pixelsize=16
URxvt*boldItalicFont: xft:Monospace:boldItalic:pixelsize=16

! Fix font space
URxvt*letterSpace: -1

! Changing font size on the fly and enabling clibpoard from console
URxvt.perl-ext-common:  ...,resize-font,selection-to-clipboard,...

! Perl clipboard
! URxvt.perl-ext-common: ...,selection-to-clipboard,...

! Disable scrollback buffer in secondary screen
URxvt.secondaryScreen: 1
URxvt.secondaryScroll: 0

! scroll in relation to buffer (with mouse scroll or Shift+Page Up)
URxvt*scrollWithBuffer: false

URxvt.scrollBar: false
